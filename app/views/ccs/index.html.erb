<div class="container">
<p id="notice"><%= notice %></p>

<h1>Credit Cards</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Ccnumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ccs.each do |cc| %>
      <tr>
        <td><%= cc.ccnumber %></td>
        <td><%= link_to 'Show', cc %></td>
        <td><%= link_to 'Destroy', cc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cc', new_cc_path %>
</div>
