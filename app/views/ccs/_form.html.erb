<%= form_with(model: cc, local: true) do |form| %>
  <% if cc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cc.errors.count, "error") %> prohibited this cc from being saved:</h2>

      <ul>
      <% cc.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :ccnumber, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
    <%= form.text_field :ccnumber, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :ccname, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
    <%= form.text_field :ccname, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :ccexp, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
    <%= form.text_field :ccexp, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :ccv, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
    <%= form.number_field :ccv, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
