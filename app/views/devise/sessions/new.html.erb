                <div class="container">
                    <div class="object-non-visible text-center" data-animation-effect="fadeInDownSmall" data-effect-delay="100">
                        <!-- logo -->
                        <div id="logo" class="logo">
                            <h3 class="margin-clear"><a href="index.html" class="logo-font link-light"> <span class="text-default">Continuous</span></a></h3>
                        </div>
                        <!-- name-and-slogan -->
                        <p class="small">Application Life Cycle Manager</p>

                        <div class="form-block center-block p-30 light-gray-bg border-clear">
                            <h2 class="title text-left">Login</h2>

                            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal text-left"}) do |f| %>
                                <div class="form-group has-feedback">
                                    <%= f.label :email, class: 'col-sm-3 control-label' %>
                                    <div class="col-sm-8">
                                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                                        <i class="fa fa-user form-control-feedback"></i>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <%= f.label :password, class: 'col-sm-3 control-label' %>
                                    <div class="col-sm-8">
                                        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
                                        <i class="fa fa-lock form-control-feedback"></i>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-8">
                                        <% if devise_mapping.rememberable? -%>
                                        <div class="checkbox">
                                            <label>
                                            <%= f.check_box :remember_me %> Remember me
                                            </label>
                                            <!-- <%= f.label :remember_me, class: 'col-sm-3 control-label' %> -->
                                        </div>
                                        <% end -%>
                                        <div class="actions">
                                            <%= f.submit "Log in", class: 'btn btn-group btn-default btn-animated' %>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                            <%= render "devise/shared/links" %>
                        </div>

                        <!-- .subfooter start -->
                        <!-- ================ -->
                        <p class="mt-20">Copyright Â© 2019 Demiops. All Rights Reserved</p>
                        <!-- .subfooter end -->
                    </div>
                </div>
