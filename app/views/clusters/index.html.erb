<div class="container">
<p id="notice"><%= notice %></p>

<h1>Clusters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Endpoints</th>
      <th>Status</th>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clusters.each do |cluster| %>
      <tr>
        <td><%= cluster.clustername %></td>
        <td><%= cluster.clusterendpoints %></td>
        <td><%= cluster.clusterstatus %></td>
        <td><%= cluster.clusterusername %></td>
        <td><%= cluster.clusterpassword %></td>
        <td><%= link_to 'Show', cluster %></td>
        <td><%= link_to 'Destroy', cluster, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cluster', new_cluster_path %>
</div>
